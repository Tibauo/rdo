---
nodes:
{% for node in nodes %}
  - name: {{ node.name }}
    mac:
      - {{ node.mac_addr }}
    pm_type: {{ node.pm_type }}
    pm_addr: {{ node.pm_addr }}
    pm_user: {{ node.pm_user }}
    pm_password: {{ node.pm_pass }}
    pm_port: {{ node.pm_port }}
    capabilities: {{ node.capabilites }}
    arch: "x86_64"
{% endfor %}
